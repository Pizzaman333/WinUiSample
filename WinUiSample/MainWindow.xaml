        <Grid
            Grid.Column="5"
            Grid.Row="5"
            Grid.ColumnSpan="4"
            Grid.RowSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <!-- Shadow -->
            <Border
                Background="Black"
                Opacity="0.2"
                CornerRadius="10"
                Width="380"
                Height="50"
                Margin="4,4,0,0" />

            <Button
                x:Name="OpenButton"
                Click="OpenButton_Click"
                Width="380"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontWeight="Bold"
                FontSize="40"
                Background="MediumAquamarine"
                Foreground="White"
                BorderThickness="0"
                CornerRadius="10">
                Submit
            </Button>
        </Grid>

        <Grid
            Grid.Column="5"
            Grid.Row="3"
            Grid.ColumnSpan="4"
            Grid.RowSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <!-- Shadow -->
            <Border
                Background="Black"
                Opacity="0.2"
                CornerRadius="10"
                Width="380"
                Height="55"
                Margin="4,4,0,0" />

            <TextBox
                x:Name="InputBox"
                Height="55"
                Width="380"
                Margin="0"
                FontSize="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                PlaceholderText="Enter your name"
                Background="MistyRose"
                BorderBrush="MediumVioletRed"
                BorderThickness="2"
                CornerRadius="10" />
        </Grid>

        <Grid
            Grid.Column="5"
            Grid.Row="7"
            Grid.ColumnSpan="4"
            Grid.RowSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <!-- Shadow -->
            <Border
                Background="Black"
                Opacity="0.2"
                CornerRadius="10"
                Width="380"
                Height="60"
                Margin="4,4,0,0" />

            <Border
                Background="Lavender"
                CornerRadius="10"
                Width="380"
                Height="60"
                Padding="6">
                <TextBlock
                    x:Name="OutputText"
                    FontSize="38"
                    Text="Your Output"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="DarkSlateBlue" />
            </Border>
        </Grid>
